.PHONY: setup dev build start test test-watch test-coverage lint lint-fix typecheck ios android web

setup:
	chmod +x setup.sh && ./setup.sh

dev:
	pnpm dev

build:
	pnpm build

start:
	pnpm start

test:
	pnpm test

test-watch:
	pnpm test:watch

test-coverage:
	pnpm test:coverage

lint:
	pnpm lint

lint-fix:
	pnpm lint:fix

typecheck:
	pnpm typecheck

ios:
	pnpm ios

android:
	pnpm android

web:
	pnpm web
