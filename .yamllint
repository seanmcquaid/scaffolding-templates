---
extends: default

rules:
  # Disable line length checks - many long lines are in embedded JS strings
  line-length: disable
  # Allow truthy values like 'on' in GitHub workflows
  truthy:
    allowed-values: ['true', 'false', 'on']
  # Relax document start requirement
  document-start: disable
  # Relax comment spacing
  comments:
    min-spaces-from-content: 1
